/*
forward unit module
*/

// interface include
`include "forward_unit_if.vh"
// memory types
`include "cpu_types_pkg.vh"

module forward_unit (
  foward_unit_if.a222 fuif
);

  // import types
  import cpu_types_pkg::*;

	always_comb begin
    forwardselA = '0;
    forwardselB = '0;

    if(MEMRegWr) begin
      if(id_ex_rs == MEMwsel) begin
        forwardselA = 2'd2;
      end
      else if (id_ex_rt == MEMwsel) begin
        forwardselB = 2'd2;
      end
    end

    if(WBRegWr) begin
      if(id_ex_rs == WBwsel) begin
        forwardselA = 2'd1;
      end
      else if (id_ex_rt == WBwsel) begin
        forwardselB = 2'd1;
      end

    end
  end

endmodule
